@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="/Default/Index">Anasayfa</a>
                <a class="breadcrumb-item text-dark" href="/ProductList/Index">Ürünler</a>
                <span class="breadcrumb-item active">Ürün Listesi</span>
            </nav>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-3 col-md-4">
            @await Component.InvokeAsync("_PriceFilterProductListComponentPartial")
            @await Component.InvokeAsync("_ColorFilterProductListComponentPartial")
            @await Component.InvokeAsync("_SizeFilterProductListComponentPartial")
        </div>
        <div class="col-lg-9 col-md-8">
            <div class="row pb-3">
                @await Component.InvokeAsync("_SortingAndShowingProductListComponentPartial")
                @await Component.InvokeAsync("_ProductListComponentPartial", new { id = ViewBag.i })
                @await Component.InvokeAsync("_PaginationProductListComponentPartial")
            </div>
        </div>
    </div>
</div>
